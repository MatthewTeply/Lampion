<div class="{{ attr.class }} form-input-around">
    <label class="field-label">{{ label }}</label>

    <textarea
        name="{{ name }}[value]" 
        cols="30" 
        rows="10" 
        class="form-control" 
        id="{{ attr.id }}" 
        placeholder="{{ attr.placeholder }}"
        {% if attr.disabled %}
            disabled="disabled"
        {% endif %}
    >{{ value }}</textarea>
</div>